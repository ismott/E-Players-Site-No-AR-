@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<div class="cont_baner_times">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form class="cadastro_time" method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <div class="cont_emblema">

        <div class="emblema_nome">
            <div class="nome_equipe">
                <label>ID</label>
                <input type="text" required name="IdEquipe">
            </div>
    
            <div class="nome_equipe">
                <label>Nome</label>
                <input type="text" required name="Nome">
            </div>
     
            <div class="emblema">
                <label>Imagem</label>
                <input type="file" name="Imagem">
            </div>
            
            <div class="cont_boton_times">
                <button class="cadastrar_times" type="submit">Cadastrar</button>
            </div>
        </div>

    </div>

    <div class="lista_times">
        <h2>Lista de Times</h2>
    </div>

    <div class="table_equipe">
        <table>

            <thead>
                <th>Id</th>
                <th>Nome</th>
                <th>Foto</th>
                <th>Excluir</th>
            </thead>
            <tbody>
                <tr>
                    @foreach (Equipe equipe in ViewBag.Equipes)
                    {
                        <tr>
                            <td>@equipe.IdEquipe</td>
                            <td>@equipe.Nome</td>
                            <td><img src="/img/Equipes/@equipe.Imagem" alt="imagem da equipe @equipe.Imagem" width="70px"></td>
                            <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe" >Excluir</a></td>
                        </tr>
                    }
                </tr>
            </tbody>

        </table>
    </div>

</form>
